package jse2_it_begear.util;

import jse2_it_begear.model.*;

public final class Stampa {
	
	//Metodo che riceve un oggetto di tipo media e richiama il rispettivo toString overradiato nella classe.
	public static void stampaMedia(Media media) {
			System.out.println(media);			
		}
		
	public static void normalizzaStampaMedia(Libro libro) {
		if(libro != null) {
			if(libro.getTitolo() != null || !libro.getTitolo().isEmpty()) {
				System.out.println("TITOLO:" + libro.getTitolo());
			}
			if(libro.getAutore() != null || !libro.getAutore().isEmpty()) {
				System.out.println("AUTORE:" + libro.getAutore());
			}
			if(libro.getGenere() != null || !libro.getGenere().isEmpty()) {
				System.out.println("GENERE:" + libro.getGenere());
			}
			if(libro.getFormato() != null || !libro.getFormato().isEmpty()) {
				System.out.println("FORMATO:" + libro.getFormato());
			}
			if(libro.getAnnoUscita() != 0) {
				System.out.println("ANNO DI USCITA:" + libro.getFormato());
			}
			if(libro.getNumeroPagine() != 0) {
				System.out.println("NUMERO DI PAGINE:" + libro.getNumeroPagine());
			}
			if(libro.getIsbn() != null || !libro.getIsbn().isEmpty()) {
				System.out.println("ISBN:" + libro.getIsbn());
			}
			if(libro.getCasaEditrice() != null || !libro.getCasaEditrice().isEmpty()) {
				System.out.println("CASA EDITRICE:" + libro.getCasaEditrice());
			}			
		}
		else {
			System.out.println("Non esiste alcun libro");
		}
	}
	
	public static void normalizzaStampaMedia(Brano brano) {
		if(brano.getTitolo() != null || !brano.getTitolo().isEmpty()) {
			System.out.println("TITOLO:" + brano.getTitolo());
		}
		if(brano.getAutore() != null || !brano.getAutore().isEmpty()) {
			System.out.println("AUTORE:" + brano.getAutore());
		}
		if(brano.getGenere() != null || !brano.getGenere().isEmpty()) {
			System.out.println("GENERE:" + brano.getGenere());
		}
		if(brano.getFormato() != null || !brano.getFormato().isEmpty()) {
			System.out.println("FORMATO:" + brano.getFormato());
		}
		if(brano.getAnnoUscita() != 0) {
			System.out.println("ANNO DI USCITA:" + brano.getFormato());
		}
		if(brano.getAlbum() != null || !brano.getAlbum().isEmpty()) {
			System.out.println("ALBUM:" + brano.getAlbum());
		}
		if(brano.getCantante() != null || !brano.getCantante().isEmpty()) {
			System.out.println("ISBN:" + brano.getCantante());
		}
		if(brano.getCasaDiscografica() != null|| !brano.getCasaDiscografica().isEmpty()) {
			System.out.println("CASA EDITRICE:" + brano.getCasaDiscografica());
		}
	}
		
