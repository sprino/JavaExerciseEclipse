package jse1_it_begear.model;

import java.util.ArrayList;
import java.util.List;

public class Brano extends Media{
	
	List<Brano> brani = new ArrayList<>();
	
	private String casaDiscografica;
	private float durata;
	private String album;
	private String cantante; 
	private String idBrano;
	
	public Brano(String titolo, String autore, String idBrano) {
		super.setTitolo(titolo);
		super.setAutore(autore);
		this.idBrano = idBrano;
	}
	
	public List<Brano> getBrani() {
		return brani;
	}

	public void setBrani(List<Brano> brani) {
		for(Brano temp : brani) {
			this.brani.add(temp);			
		}
	}
	
	public String getIdBrano() {
		return idBrano;
	}

	public void setIdBrano(String idBrano) {
		this.idBrano = idBrano;
	}
	
	public void setCasaDiscografica(String casaDiscografica) {
		this.casaDiscografica = casaDiscografica;
	}

	public void setDurata(float durata) {
		this.durata = durata;
	}

	public void setAlbum(String album) {
		this.album = album;
	}

	public void setCantante(String cantante) {
		this.cantante = cantante;
	}

	public String getCasaDiscografica(){
		return this.casaDiscografica;
	}

	public float getDurata(){
		return this.durata;
	}

	public String getAlbum(){
		return this.album;
	}
	
	public String getCantante() {
		return this.cantante;
	}

	//Override del metodo toString dichiarato come abstract nella classe padre Media per obbligare ad implementare questo metodo.
	@Override
	public String toString() {
		return "TITOLO:" + super.getTitolo() + 
			   "\nGENERE:" + super.getGenere() + 
			   "\nFORMATO:" + super.getFormato() +
			   "\nAUTORE:" + super.getAutore() +
			   "\nANNO DI USCITA:" + super.getAnnoUscita() + 
			   "\nCASA DISCOGRAFICA: " + this.getCasaDiscografica() +
			   "\nDURATA:" + this.durata +
			   "\nALBUM:" + this.album + 
			   "\nCANTANTE:" + this.cantante +
			   "\nIdBRANO:" + this.idBrano + "\n\n";
	}	
}
