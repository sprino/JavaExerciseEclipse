package jse1_it_begear.model;

public class Libro extends Media{

	private Libro[] libreria = new Libro[10];
	
	private String casaEditrice;
	private int numeroPagine;
	private String edizione;
	private String isbn;

	static int count = 0;
	
	public Libro(String titolo, String autore, String casaEditrice, String isbn) {
		super.setTitolo(titolo);
		super.setAutore(autore);
		this.casaEditrice = casaEditrice;
		this.isbn = isbn;
	}
	
	public void setLibreria(Libro[] libreria) {

			for(Libro temp : libreria) {
					this.libreria[count] = temp;
					count++;
			}
	}
	
	public void setCasaeditrice(String casaEditrice) {
		this.casaEditrice = casaEditrice;
	}
	
	public void setNumeroPagine(int numeroPagine) {
		this.numeroPagine = numeroPagine;
	}
	
	public void setEdizione(String edizione) {
		this.edizione = edizione;
	}
	
	public void setIsbn(String isbn) {
		this.isbn = isbn;
	}
	
	public Libro[] getLibreria() {
		return libreria;
	}
	
	public String getCasaEditrice() {
		return this.casaEditrice;
	}

	public String getIsbn() {
		return this.isbn;
	}

	public int getNumeroPagine() {
		return this.numeroPagine;
	}
	
	public String edizione(){
		return this.edizione;
	}
	
	//Override del metodo toString dichiarato come abstract nella classe padre Media per obbligare ad implementare questo metodo.
	@Override
	public String toString() {
		
		String stringTemp = "";
		
		if(!super.getTitolo().equals(null)) {
			stringTemp = stringTemp + super.getTitolo();			
		}
		else if(!super.getGenere().equals(null)) {
			
		}
		return "TITOLO:" + super.getTitolo() + 
			   "\nGENERE:" + super.getGenere() + 
			   "\nFORMATO:" + super.getFormato() +
			   "\nAUTORE:" + super.getAutore() +
			   "\nANNO DI USCITA:" + super.getAnnoUscita() + 
			   "\nCASA EDITRICE: " + this.casaEditrice +
			   "\nNUMERO PAGINE:" + this.numeroPagine +
			   "\nEDIZIONE:" + this.edizione + 
			   "\nISBN:" + this.isbn + "\n\n";
	}
	
}
